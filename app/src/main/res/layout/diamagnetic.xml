<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adity.physicsfun2.ThreeActivity">


    <VideoView
        android:id="@+id/videoView5"
        android:layout_width="379dp"
        android:layout_height="223dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView5"
        android:onClick="onClick13"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="336dp"
        android:layout_height="121dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="37dp"
        android:text="The diamagnetic properties of water cause act like a magnet witht the opposite polarity. This cause the water directly below the magnet to be pushed down slightly and create a slight depression in the surface of the water. The depression 'follows' the magnet as it moves, causing object that fall into the depression to follow the magnet as well."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
