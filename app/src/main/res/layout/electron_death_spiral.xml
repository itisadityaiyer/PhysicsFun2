<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adity.physicsfun2.TwoActivity">


    <VideoView
        android:id="@+id/videoView3"
        android:layout_width="379dp"
        android:layout_height="215dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="0dp"
        android:text="Play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView3"
        android:onClick="onClick11"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="121dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="37dp"
        android:text="Newtonian Physics assumes that a hydrogen atom's electron will dissapate energy while spinning as it creates a magnetic/electric field. The spinning electron dissapted energy so quickly, it wont be able to maintain orbit and will fall into the center of the nucleus within 10^-24 seconds."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
